{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDB": {
    "ConnectionString": "",
    "DatabaseName": "erp_inventory"
  },
  "Jwt": {
    "Secret": "",
    "Issuer": "erp-system",
    "Audience": "erp-clients"
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "Topic": "inventory-events"
  },
  "Services": {
    "Financial": "http://financial:8080"
  },
  "Financial": {
    "RevenueAccountId": "REVENUE_ACCOUNT"
  },
  "DefaultAccounts": {
    "RevenueAccountNumber": "4000-REVENUE"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  }
}
